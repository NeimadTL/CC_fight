<!DOCTYPE html>
<html>
  <head>
    <title>CC Fight</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
      <a class="navbar-brand" href="<%= root_path %>">CC Fight</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="<%= new_character_path %>">Create new character</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= fights_path %>">Fights history</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= characters_path %>">All characters</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="background">
      <div class="container">
        <div class="row">
          <div class="col-sm">

            <% if notice.present? %>
              </br><div class="p-3 mb-2 bg-success text-white rounded"><%= notice %></div>
            <% end %>

          	<% if alert.present? %>
              </br><div class="p-3 mb-2 bg-danger text-white rounded"><%= alert %></div>
          	<% end %>

            <%= yield %>

          </div>
        </div>
      </div>
    </div>

  </body>
</html>
