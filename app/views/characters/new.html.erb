<br/><h5 class="text-white">Create your character</h5><br/>

<%= simple_form_for @character, url: characters_path do |f| %>
  <%= f.input :name, label: false, placeholder: 'Name', input_html: { class: 'form-control' } %>
  <%= f.input :picture, label: false, placeholder: 'Picture', input_html: { class: 'form-control' } %>
  <%= f.submit "Create", class: 'btn btn-primary' %>
<% end %>


<script type="text/javascript">

  $('#new_character').validate({

    highlight: function(element) {
      jQuery(element).closest('.form-control').addClass('is-invalid');
    },
    unhighlight: function(element) {
      jQuery(element).closest('.form-control').removeClass('is-invalid');
    },
    errorElement: 'div',
    errorClass: 'invalid-feedback text-white',
    rules: {
      'character[name]': { required: true },
    },
    messages: {
      'character[name]': { required: "Please fill this input with a name for your character." },
      'character[attack_score]': { required: "Please fill this input with a attack score for your character." }
    }
  });

</script>
