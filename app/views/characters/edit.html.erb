<br/><h5 class="text-white">Edit the character <%= @character.name %></h5><br/>

<%= simple_form_for @character, url: character_path(@character) do |f| %>
  <%= f.input :name, label: false, placeholder: 'Name', input_html: { class: 'form-control' } %>
  <%= f.input :attack_score, label: false, placeholder: 'Attack score', input_html: { class: 'form-control' } %>
  <%= f.input :picture, label: false, placeholder: 'Picture', input_html: { class: 'form-control' } %>
  <%= f.submit 'Edit', class: 'btn btn-primary' %>
<% end %>
